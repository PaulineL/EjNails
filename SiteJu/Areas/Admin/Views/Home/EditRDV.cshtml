@{
    ViewData["Title"] = "Modifier un rdv";
}
@model RDVViewModel

<div class="container">
    <h1>Modifier un rendez-vous </h1>

    @using (Html.BeginForm("EditRDV", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.At, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.At, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DisplayFor(model => model.Client.Firstname, new { @class = "form-control" })
            @Html.DisplayFor(model => model.Client.Lastname, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DisplayFor(model => model.Client.Telephone, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DisplayFor(model => model.Client.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <h2>Prestations</h2>
            @for (int i = 0; i < Model.Prestation.Count; i++)
            {
                <div class="form-check">
                    @Html.HiddenFor(model => model.Prestation[i].Id)
                    @Html.CheckBoxFor(model => model.Prestation[i].IsSelected, new { @class = "form-check-input" })
                    @Html.DisplayFor(model => model.Prestation[i].Name, new { @class = "form-check-label" })
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
    }
    <form method="post" asp-action="DeleteRDV">
        @Html.HiddenFor(m => m.Id)
        <button class="btn btn-danger" type="submit">Supprimer</button>
    </form>
</div>