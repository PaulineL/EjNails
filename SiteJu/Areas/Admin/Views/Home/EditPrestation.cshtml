@model PrestationViewModel


<div class="container">
    <h1>Modifier une prestation</h1>

    @using (Html.BeginForm("EditPrestation", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Duration, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Duration, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Category, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Category.Id, new SelectList(Model.CategoryAvailable, "Id", "Name"))
        </div>

        <h2>Options Disponible</h2>

        for (int i = 0; i < Model.Options.Count(); i++)
        {
            <div class="form-group">
                @Html.HiddenFor(model => model.Options[i].Id)
                @Html.DisplayFor(model => model.Options[i].Name, new { @class = "form-label" })
                @Html.CheckBoxFor(model => model.Options[i].IsSelected)
            </div>
        }

        <button type="submit" class="btn btn-primary">Envoyer</button>
    }
</div>
