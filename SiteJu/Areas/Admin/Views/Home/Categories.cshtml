@{
    ViewData["Title"] = "Catégories";
}

@model IEnumerable<PrestationCategoryViewModel>

<div class="container">
    <h1>Les catégories</h1>

    <a asp-action="CreateCategory"><button class="btn btn-primary">Ajouter une catégorie</button></a>


    <table class="table table-hover">
        <thead>
            <th scope="col">Nom</th>
        </thead>
            <tbody>
                    @foreach (var category in Model)
                    {
                <tr>

                    <td>@category.Name</td>
                    <td>
                        <form method="post" asp-action="DeleteCategory">
                            @Html.Hidden("id", category.Id)
                            <button class="btn btn-danger" type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>

                }
                </tbody>
    </table>

</div>