@model List<User>

<a asp-action="Create">Ajouter un utilisateur</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Utilisateur</th>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Role</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.UserName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @user.Name
                </td>
                <td>
                    @user.Role
                </td>
                <td>
                    <a class="btn btn-outline-danger" asp-route-id="@user.Id" asp-controller="Form" asp-action="Delete">Supprimer</a>
                    <a class="btn btn-outline-info" asp-route-id="@user.Id" asp-controller="Form" asp-action="Edit">Editer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
