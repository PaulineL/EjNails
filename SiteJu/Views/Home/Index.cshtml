@{
    ViewData["Title"] = "Home Page";
}

<partial name="_logo" />

<!-- Image Showcases-->
<section class="showcase">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-6 order-lg-2 text-white taille showcase-img" style="background-image: url('img/jujuroses.png')"></div>
            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                <div class="diamond-text">
                    <img class="diamond" src="assets/img/diamond.png" />
                    <h2 class="title-accueil">   Julie P</h2>
                </div>
                <p class="lead mb-0">Prothésiste ongulaire at the theme will look great on any device, whether it's a phone, tablet, or desktop the page will behave responsively!</p>
            </div>
        </div>
        <div class="appear row g-0">
            <div class="col-lg-6 text-white showcase-img" style="background-image: url('assets/img/salon.jpg')"></div>
            <div class="col-lg-6 my-auto showcase-text">
                <div class="diamond-text">
                    <img class="diamond" src="assets/img/diamond.png" />
                    <h2 class="title-accueil">   Le salon</h2>
                </div>
                <p class="lead mb-0">Situé à Montastruc La Conseillére blabla</p>
            </div>
        </div>
        <div class="appear row g-0">
            <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('assets/img/a.jpg')"></div>
            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                <div class="diamond-text">
                    <img class="diamond" src="assets/img/diamond.png" />
                    <h2 class="title-accueil">
                        @Html.ActionLink("Mes réalisations", "Realisations", "Home", null, new { @class = "nav-link text-dark" })
                    </h2>
                </div>
                <p class="lead mb-0">Ongles en gel, capsules, vernis semi-permanent ...</p>
            </div>
        </div>
    </div>
</section>
<!-- Icons Grid-->
<section class="features-icons bg-light text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex"><i class="bi-window m-auto text-primary"></i></div>
                    <h3>Gel</h3>
                    <p class="lead mb-0">This theme will look great on any device, no matter the size!</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex"><i class="bi-layers m-auto text-primary"></i></div>
                    <h3>Vernis semi-permanent</h3>
                    <p class="lead mb-0">Featuring the latest build of the new Bootstrap 5 framework!</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                    <div class="features-icons-icon d-flex"><i class="bi-terminal m-auto text-primary"></i></div>
                    <h3>Easy to Use</h3>
                    <p class="lead mb-0">Ready to use with your own content, or customize the source files!</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Testimonials-->
<section class="testimonials text-center bg-light">
    <div class="container">
        <h2 class="mb-5">Avis</h2>
        <div class="row">
            <div class="col-lg-4">
                <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                    <img class="img-fluid rounded-circle mb-3" src="assets/img/pauline.jpg" alt="..." />
                    <h5>Pauline L.</h5>
                    <p class="font-weight-light mb-0">"Julie fait de sublime nail art motif serpents"</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                    <img class="img-fluid rounded-circle mb-3" src="assets/img/louna.jpg" alt="..." />
                    <h5>Louna L.</h5>
                    <p class="font-weight-light mb-0">"Ma maman est toujours sublime en revenant de son rdv avec Julie !"</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                    <img class="img-fluid rounded-circle mb-3" src="assets/img/olivier.jpg" alt="..." />
                    <h5>Olivier H.</h5>
                    <p class="font-weight-light mb-0">"Ma femme est encore plus fraiche grace à Julie !"</p>
                </div>
            </div>
        </div>
    </div>
</section>
