@model HomeViewModel

<div class="text-center">
    <h1 class="title-section">Contact</h1>
</div>

@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
        <div id="myForm" class="container contact">
            <div class="form-group">
                @Html.LabelFor(model => model.Contact.LastName, new { @class = "form-label", id = "lastname" })
                @Html.TextBoxFor(model => model.Contact.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Contact.Name, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Contact.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Contact.Email, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Contact.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Contact.Message, new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Contact.Message, new { @class = "form-control textarea" })
            </div>
            <button type="submit" class="btn btn-primary btn-contact">Envoyer</button>
        </div>

}