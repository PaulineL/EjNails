    <script>
        var lastScrollTop = 0;

        window.addEventListener("scroll", function () {
            var st = window.pageYOffset || document.documentElement.scrollTop;
            if (!document.documentElement.scrollTop) { //!document.documentElement.scrollTop === (!document.documentElement.scrollTop == 0)
                this.document.getElementById("navbar").classList.add("navbar-big")
            } else {
                this.document.getElementById("navbar").classList.remove("navbar-big")
            }
            if (st > lastScrollTop) {
                this.document.getElementById("navbar").classList.add("navbar-hide");
            } else {
                this.document.getElementById("navbar").classList.remove("navbar-hide");
            }
            lastScrollTop = st <= 0 ? 0 : st; 
        }, false);
    </script>
